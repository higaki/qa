<h1><%= _('New subject') %></h1>

<% unless @subject.errors.empty? %>
  <ul>
    <% @subject.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for(@subject) do |f| %>
  <p>
    <span><%= _('User') %></span>
    <%= current_user.name %>
  </p>

  <p>
    <%= f.label :name, _('Name') %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :start_date, _('Start date') %>
    <%= f.date_select :start_date %>
  </p>

  <p>
    <%= f.label :end_date, _('End date') %>
    <%= f.date_select :end_date %>
  </p>

  <p>
    <%= f.label :max_respondents, _('Max respondents') %>
    <%= f.text_field :max_respondents %>
  </p>

  <p>
    <%= f.submit _("Create") %>
  </p>
<% end %>

<%= link_to _('Back'), subjects_path %>
